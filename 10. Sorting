#include <iostream>
using namespace std;

void bubble(int a[], int n) {
    for (int i = 0; i < n-1; i++)
        for (int j = 0; j < n-i-1; j++)
            if (a[j] > a[j+1])
                swap(a[j], a[j+1]);
}

void insertion(int a[], int n) {
    for (int i = 1; i < n; i++) {
        int key = a[i], j = i-1;
        while (j >= 0 && a[j] > key) {
            a[j+1] = a[j];
            j--;
        }
        a[j+1] = key;
    }
}

void mergeArr(int a[], int l, int m, int r) {
    int n1 = m-l+1, n2 = r-m;
    int L[n1], R[n2];
    for (int i = 0; i < n1; i++) L[i] = a[l+i];
    for (int i = 0; i < n2; i++) R[i] = a[m+1+i];
    int i = 0, j = 0, k = l;
    while (i < n1 && j < n2)
        a[k++] = (L[i] < R[j]) ? L[i++] : R[j++];
    while (i < n1) a[k++] = L[i++];
    while (j < n2) a[k++] = R[j++];
}

void mergeSort(int a[], int l, int r) {
    if (l < r) {
        int m = (l + r) / 2;
        mergeSort(a, l, m);
        mergeSort(a, m+1, r);
        mergeArr(a, l, m, r);
    }
}

int partitionQS(int a[], int l, int r) {
    int p = a[r], i = l-1;
    for (int j = l; j < r; j++)
        if (a[j] < p)
            swap(a[++i], a[j]);
    swap(a[i+1], a[r]);
    return i+1;
}

void quickSort(int a[], int l, int r) {
    if (l < r) {
        int p = partitionQS(a, l, r);
        quickSort(a, l, p-1);
        quickSort(a, p+1, r);
    }
}

void heapify(int a[], int n, int i) {
    int l = 2*i+1, r = 2*i+2, largest = i;
    if (l < n && a[l] > a[largest]) largest = l;
    if (r < n && a[r] > a[largest]) largest = r;
    if (largest != i) {
        swap(a[i], a[largest]);
        heapify(a, n, largest);
    }
}

void heapSort(int a[], int n) {
    for (int i = n/2-1; i >= 0; i--)
        heapify(a, n, i);
    for (int i = n-1; i > 0; i--) {
        swap(a[0], a[i]);
        heapify(a, i, 0);
    }
}

void print(int a[], int n) {
    for (int i = 0; i < n; i++)
        cout << a[i] << " ";
    cout << endl;
}

int main() {
    int a1[] = {40,10,30,50,80,70,20};
    int a2[] = {40,10,30,50,80,70,20};
    int a3[] = {40,10,30,50,80,70,20};
    int a4[] = {40,10,30,50,80,70,20};
    int a5[] = {40,10,30,50,80,70,20};
    int n = 7;

    bubble(a1, n);
    insertion(a2, n);
    mergeSort(a3, 0, n-1);
    quickSort(a4, 0, n-1);
    heapSort(a5, n);

    print(a1, n);
    print(a2, n);
    print(a3, n);
    print(a4, n);
    print(a5, n);
}
